.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 50px;
  background-color: #f5f5f5; /* 背景色 */
  height: 100vh; /* 充满屏幕高度 */
}

.header {
  margin-bottom: 40px;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #333; /* 标题颜色 */
}

.button-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 300px; /* 最大宽度 */
}

.btn {
  background-color: #007aff; /* 按钮颜色 */
  color: #ffffff; /* 按钮文字颜色 */
  padding: 15px;
  border: none;
  border-radius: 5px;
  margin-bottom: 15px; /* 按钮间距 */
  cursor: pointer;
  transition: background-color 0.3s;
}

.btn:hover {
  background-color: #005bb5; /* 按钮悬停效果 */
}

.footer {
  margin-top: 40px;
  color: #888; /* 底部文字颜色 */
}
