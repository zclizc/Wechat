/** signIn.wxss **/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.title {
  font-size: 24px;
  margin-bottom: 20px;
}

.info {
  margin: 10px 0;
}

.button {
  margin-top: 20px;
  width: 80%;
  padding: 10px;
  border-radius: 5px;
  background-color: #007aff;
  color: white;
  font-size: 16px;
}

.status {
  margin-top: 15px;
  color: green;
}
