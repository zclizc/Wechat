.container {
  padding: 20px;
  background-color: #f5f5f5; /* 背景色 */
}

.question-list {
  margin-bottom: 20px;
}

.question-item {
  padding: 15px;
  border-radius: 10px; /* 圆角 */
  background-color: #ffffff; /* 题目背景 */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 阴影 */
  margin-bottom: 15px;
  cursor: pointer;
  transition: transform 0.2s; /* 动效 */
}

.question-item:hover {
  transform: scale(1.02); /* 悬停效果 */
}

.current-question {
  margin-top: 20px;
  padding: 15px;
  border-radius: 10px;
  background-color: #ffecb3; /* 当前题目背景 */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

button {
  margin-top: 10px;
  background-color: #007aff; /* 按钮颜色 */
  color: #ffffff; /* 按钮文字颜色 */
  padding: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

button:hover {
  background-color: #005bb5; /* 按钮悬停效果 */
}
