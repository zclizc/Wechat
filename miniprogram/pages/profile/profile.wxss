.container {
  padding: 20px;
  background-color: #f5f5f5; /* 背景色 */
}

.profile-info {
  padding: 15px;
  border-radius: 10px; /* 圆角 */
  background-color: #ffffff; /* 背景 */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

input {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  width: 100%;
  margin-bottom: 15px;
}

button {
  margin-top: 10px;
  background-color: #007aff;
  color: #ffffff;
  padding: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

button:hover {
  background-color: #005bb5; /* 按钮悬停效果 */
}
